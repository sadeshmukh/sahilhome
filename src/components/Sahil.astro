<style>
  #main {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    z-index: 1;
    width: 100%;
  }

  .intro-text {
    color: #00ff99;
    font-size: 2.5rem;
    font-weight: 300;
    letter-spacing: 0.12em;
    opacity: 0.9;
    font-family: "42dot Sans", monospace;
    margin-bottom: 3rem;
    background: linear-gradient(to right, #00ff99, #00ffcc);
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
    filter: drop-shadow(0 0 2px #00ff9966);
    transform: translateY(-4rem);
    position: relative;
    z-index: 2;
  }

  .base-svg,
  .animated-svg {
    position: absolute;
    bottom: calc(50% - 146.002px / 2);
    transform: translateY(2rem);
    z-index: 1;
  }

  .svgline {
    filter: drop-shadow(0 0 2px #00ff99);
  }

  /* Add some spacing for the links slot */
  :global(slot[name="links"]) {
    position: relative;
    z-index: 2;
    margin-top: 12rem; /* Adjust this value as needed */
  }

  @media (max-width: 768px) {
    #main {
      top: 40%;
    }
    .intro-text {
      font-size: 1.5rem;
      transform: translateY(-2rem);
    }
    .base-svg,
    .animated-svg {
      transform: translateY(2rem);
      width: calc(100% - 2rem); /* Leave 1rem gap on each side */
      height: auto;
      max-width: 400px; /* Prevent getting too large on tablets */
    }
    /* Adjust the links slot margin for mobile */
    :global(slot[name="links"]) {
      margin-top: 10rem;
    }
  }
</style>

<script>
  import { animate, stagger, svg, utils } from "animejs";
  // create svg element
  const svgElement = document.querySelector("#svgGroup");
  const paths = svgElement?.querySelectorAll("path");
  paths?.forEach((path) => {
    path.classList.add("svgline");
  });

  animate(svg.createDrawable(".svgline"), {
    draw: ["0 0", "0 1", "1, 1"],
    duration: 3000,
    easing: "inOutQuad",
    delay: stagger(100),
    loop: true,
    strokeWidth: [0, 1, 0],
  });
</script>
